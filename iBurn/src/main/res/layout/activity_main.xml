<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingTop="8dp"
                android:paddingStart="16dp"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.Large" />

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="10dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:src="@drawable/ic_search" />

            <RelativeLayout
                android:id="@+id/search_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                android:elevation="2dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/search_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:src="@drawable/ic_arrow_back_grey600_36dp"/>

                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/search_cancel"
                    android:layout_toRightOf="@id/search_cancel"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@id/search"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:textColor="@color/off_blk"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:background="@null" />

                </RelativeLayout>

            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/tabs"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_below="@id/title"
                android:visibility="visible"
                app:pstsTextAllCaps="false"
                app:pstsUnderlineHeight="0dp"
                app:pstsIndicatorHeight="4dp"/>

            <TextView
                android:id="@+id/GjTextUnreadCounter"
                android:gravity="center"
                android:layout_width="36dip"
                android:layout_height="36dip"
                android:background="@drawable/text_unread_counter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:visibility="gone"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.gaiagps.iburn.view.MapViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="?attr/actionBarSize" />

        <LinearLayout
            android:id="@+id/GjCriticalError"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Critical Error !!!"
                android:textColor="#FFFF0000"
                android:textStyle="bold"
                android:textSize="120sp"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/unlock_container"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/off_blk"
        android:orientation="horizontal">

        <Button
            android:id="@+id/unlock_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="showUnlockDialog"
            android:text="@string/enter_unlock_code"/>

        <TextView
            android:id="@+id/unlock_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/unlock_button"
            android:layout_toLeftOf="@id/unlock_button"
            android:text="@string/unlock_description"/>

        </RelativeLayout>

    <include layout="@layout/logo_animation"
             android:id="@+id/logoAnimation"/>

</RelativeLayout>
