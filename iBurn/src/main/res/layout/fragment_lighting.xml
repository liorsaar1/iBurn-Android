<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/GjLightSliderLabel"
            android:text="Mode"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                style="@style/GjLightTableRow">

                <Button
                    android:id="@+id/lightEffect_1_1"
                    style="@style/GjLightButton"
                    android:tag="0"
                    android:text="1 / 1"/>

                <Button
                    android:id="@+id/lightEffect_1_2"
                    style="@style/GjLightButton"
                    android:tag="1"
                    android:text="1 / 2"/>

                <Button
                    android:id="@+id/lightEffect_1_3"
                    style="@style/GjLightButton"
                    android:tag="2"
                    android:text="1 / 3"/>

                <Button
                    android:id="@+id/lightEffect_1_4"
                    style="@style/GjLightButton"
                    android:tag="3"
                    android:text="1 / 4"/>
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <Button
                    android:id="@+id/lightEffect_2_1"
                    style="@style/GjLightButton"
                    android:tag="4"
                    android:text="2 / 1"/>

                <Button
                    android:id="@+id/lightEffect_2_2"
                    style="@style/GjLightButton"
                    android:tag="5"
                    android:text="2 / 2"/>

                <Button
                    android:id="@+id/lightEffect_2_3"
                    style="@style/GjLightButton"
                    android:tag="6"
                    android:text="2 / 3"/>

                <Button
                    android:id="@+id/lightEffect_2_4"
                    style="@style/GjLightButton"
                    android:tag="7"
                    android:text="2 / 4"/>
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Hue"
                    />

                <SeekBar
                    android:id="@+id/lightHue"
                    style="@style/GjLightSlider"
                    android:progress="20"
                    android:background="@drawable/light_hsb"/>
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Brightness"/>

                <SeekBar
                    android:progress="30"
                    android:id="@+id/lightBrightness"
                    style="@style/GjLightSlider"
                    />
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Saturation"/>

                <SeekBar
                    android:progress="40"
                    android:id="@+id/lightSaturation"
                    style="@style/GjLightSlider"/>
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Speed"/>

                <SeekBar
                    android:progress="50"
                    android:id="@+id/lightSpeed"
                    style="@style/GjLightSlider"
                    />
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Tweak"/>

                <SeekBar
                    android:progress="60"
                    android:id="@+id/lightParameter1"
                    style="@style/GjLightSlider"
                    />
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Freak"/>

                <SeekBar
                    android:progress="70"
                    android:id="@+id/lightParameter2"
                    style="@style/GjLightSlider"
                    />
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            style="@style/GjLightSliderLabel"
            android:text="Palette"/>

        <ImageView
            android:layout_width="600dp"
            android:layout_height="400dp"
            android:src="@drawable/light_palette_less"
            />
    </LinearLayout>


</LinearLayout>
