<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridView
            android:id="@+id/lightModeGrid"
            android:layout_width="600dip"
            android:layout_height="wrap_content"
            android:columnWidth="145dp"
            android:gravity="left"
            android:horizontalSpacing="4dp"
            android:numColumns="4"
            android:padding="0dp"
            android:stretchMode="none"
            android:verticalSpacing="4dp"/>

        <TableLayout
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Hue"
                    />

                <SeekBar
                    android:id="@+id/lightHue"
                    style="@style/GjLightSlider"
                    android:background="@drawable/light_hsb"
                    android:progress="20"/>
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Brightness"/>

                <SeekBar
                    android:id="@+id/lightBrightness"
                    style="@style/GjLightSlider"
                    android:progress="30"
                    />
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Saturation"/>

                <SeekBar
                    android:id="@+id/lightSaturation"
                    style="@style/GjLightSlider"
                    android:progress="40"/>
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Speed"/>

                <SeekBar
                    android:id="@+id/lightSpeed"
                    style="@style/GjLightSlider"
                    android:progress="50"
                    />
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Tweak"/>

                <SeekBar
                    android:id="@+id/lightParameter1"
                    style="@style/GjLightSlider"
                    android:progress="60"
                    />
            </TableRow>

            <TableRow
                style="@style/GjLightTableRow">

                <TextView
                    style="@style/GjLightSliderLabel"
                    android:text="Freak"/>

                <SeekBar
                    android:id="@+id/lightParameter2"
                    style="@style/GjLightSlider"
                    android:progress="70"
                    />
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:weightSum="1">

        <GridView
            android:id="@+id/lightPaletteGrid"
            android:layout_width="600dip"
            android:layout_height="wrap_content"
            android:columnWidth="600dp"
            android:gravity="left"
            android:horizontalSpacing="0dp"
            android:numColumns="1"
            android:padding="0dp"
            android:stretchMode="none"
            android:verticalSpacing="4dp"/>

    </LinearLayout>

</LinearLayout>
